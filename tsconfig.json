{
  "include": ["./typings", "./src", "./server", "./vite.config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src": ["./src/index"],
      "@src/*": ["./src/*"],
    },

    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES6",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

  },
  "files": [
    "./typings/env.d.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
}
